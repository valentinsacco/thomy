---
import astroLogo from '../assets/astro.svg'
import background from '../assets/background.svg'

import Imagen from '../assets/image-carousel-1.jpg'
import IAPOSIcon from '../assets/obrassociales/iapos.svg'
import OSDEIcon from '../assets/obrassociales/osde.svg'

import Logo from '../assets/logo.svg'
import Carousel from './Carousel.astro'
import WhatsappIcon from '../assets/whatsapp.svg'
import InstagramIcon from '../assets/instagram.svg'
import LocationIcon from '../assets/location.svg'
---

<div id='max-w-screen'>
    <img
        id='background'
        src={Imagen.src}
        alt=''
        fetchpriority='high'
        class='object-cover object-left w-full h-screen fixed top-0 left-0 -z-10 right-0'
    />
    <main>
        <header
            class='h-20 fixed top-0 right-0 left-0 flex flex-row justify-between items-center px-5 md:px-20 text-white transition-all duration-300'
        >
            <div>
                <img src={Logo.src} class='h-20' />
            </div>
            <h1
                id='header-title'
                style="font-family: 'Sora';"
                class='hidden md:flex md:flex-col gap-1.5 text-2xl font-medium m-0 p-0 text-center opacity-0 transition-opacity duration-300'
            >
                Dr. Thomas Alvarado
                <br />
                <span class='text-sm font-extralight text-white'
                    >Médico Oftalmólogo</span
                >
            </h1>
            <div>
                <a
                    class='text-lg md:text-xl cursor-pointer font-medium text-white'
                    href='https://google.com'
                >
                    Turnos
                </a>
            </div>
        </header>
        <section class='h-screen grid place-items-center'>
            <div class='flex flex-col items-center'>
                <h1
                    id='bottom-title'
                    style="font-family: 'Sora';"
                    class='flex flex-col gap-2 text-xl md:text-7xl font-medium w-[850px] m-0 p-0 absolute bottom-10 text-white text-center transition-opacity duration-300'
                >
                    Dr. Thomas Alvarado
                    <!-- <h2
                        style="font-family: 'Sora';"
                        class='text-base font-light m-0 p-0 text-white text-center mt-4'
                    >
                        MN. 234243
                    </h2> -->
                </h1>
            </div>
        </section>
        <section
            style="font-family: 'Sora';"
            class='pb-10 text-gray-100 flex flex-col md:grid grid-cols-1 grid-rows-3 md:grid-cols-3 md:grid-rows-1 px-5 md:px-20 gap-10'
        >
            <div class='h-fit col-span-1 w-full'>
                <h2 class='text-3xl font-bold'>CONTACTO</h2>
               <div class="flex flex-col gap-0.5">
                 <a
                    href='https://wa.me/message/T7BBDQVGT624I1'
                    class='flex flex-row items-center text-lg pl-6 font-light mt-4'
                    target='_blank'
                    rel='noopener noreferrer'
                    title='Enviar mensaje por WhatsApp'
                >
                    <img src={WhatsappIcon.src} class='inline-block h-6 mr-2' />
                    +54 342 569-2483
                </a>
                <a
                    href='https://www.instagram.com/drthomasalvarado/'
                    class='flex flex-row items-center text-lg pl-6 font-light mt-4'
                    target='_blank'
                    rel='noopener noreferrer'
                    title='Enviar mensaje por WhatsApp'
                >
                    <img src={InstagramIcon.src} class='inline-block h-6 mr-2' />
                    @drthomasalvarado
                </a>
               </div>
            </div>
            <div class='h-fit col-span-1 w-full text-gray-100'>
                <h2 class='text-3xl font-bold'>UBICACIÓN</h2>
                <a
                    href='https://maps.app.goo.gl/5KxdbcQrmB8eEosy8'
                    class='flex flex-row items-center text-lg pl-6 font-light mt-4'
                    target='_blank'
                    rel='noopener noreferrer'
                    title='Ver en Google Maps'
                >
                    <img src={LocationIcon.src} class='inline-block h-6 mr-2' />
                    Salta 2131, Santa Fe, Argentina.
                </a>
            </div>
            <div class='h-fit col-span-1 row-span-1 w-full flex flex-col'>
                <h2 class='text-3xl font-bold'>OBRA SOCIALES</h2>
                <ul class='list-none pl-6 text-left mt-4 gap-2.5 flex flex-col'>
                    <li class='text-md font-light'>
                        <img
                            src={IAPOSIcon.src}
                            class='inline-block h-10 mr-2 rounded-full bg-white p-1'
                        />
                        <span class='text-lg font-light'>IAPOS</span>
                    </li>
                    <li class='text-md font-light'>
                        <img
                            src={OSDEIcon.src}
                            class='inline-block h-10 mr-2 rounded-full bg-white p-1'
                        />
                        <span class='text-lg font-light'>OSDE</span>
                    </li>
                </ul>
            </div>
            <!-- <div class='h-fit col-span-1 w-full'>
                <h2 class='text-3xl font-bold'>HORARIOS DE ATENCIÓN</h2>
                <p class='text-lg pl-6 font-light mt-4'>
                    Lunes a Viernes de 9:00 a 18:00.
                </p>
            </div> -->
        </section>
    </main>
</div>

<style>
    header {
        background: transparent;
    }

    header.scrolled {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
    }

    #bottom-title {
        left: 50%;
        transform: translateX(-50%);
    }

    #bottom-title.hidden {
        opacity: 0;
    }

    #header-title {
        opacity: 0;
    }

    #header-title.visible {
        opacity: 1;
    }
</style>

<script>
    const header = document.querySelector('header')
    const bottomTitle = document.querySelector('#bottom-title')
    const headerTitle = document.querySelector('#header-title')

    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            header?.classList.add('scrolled')
            bottomTitle?.classList.add('hidden')
            headerTitle?.classList.add('visible')
        } else {
            header?.classList.remove('scrolled')
            bottomTitle?.classList.remove('hidden')
            headerTitle?.classList.remove('visible')
        }
    })
</script>
